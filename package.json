{
  "name": "next.js-typescript-starter",
  "version": "0.0.1",
  "description": "Next.js implemented using Typescript and Jest",
  "scripts": {
    "dev": "next",
    "build": "next build",
    "start": "next start",
    "test": "jest",
    "test:watch": "jest --watchAll",
    "test:coverage": "jest --coverage",
    "ts:check": "tsc --noEmit"
  },
  "keywords": [
    "next.js-typescript-starter"
  ],
  "author": "Max Fouquet <fouquet.max@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "next": "^9.0.2",
    "react": "^16.8.6",
    "react-dom": "^16.8.6"
  },
  "devDependencies": {
    "@types/enzyme": "^3.1.10",
    "@types/enzyme-adapter-react-16": "^1.0.2",
    "@types/jest": "^24.0.11",
    "@types/node": "^8.10.14",
    "@types/react": "^16.7.13",
    "@types/react-redux": "^6.0.0",
    "@zeit/next-css": "^1.0.1",
    "babel-jest": "^24.7.1",
    "babel-plugin-transform-define": "^1.3.0",
    "enzyme": "^3.7.0",
    "enzyme-adapter-react-16": "^1.6.0",
    "jest": "^24.7.1",
    "postcss": "^8.2.10",
    "postcss-preset-env": "^6.0.10",
    "ts-jest": "^24.0.2",
    "typescript": "^3.4.5",
    "webpack-bundle-analyzer": "^3.0.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testMatch": [
      "**/*.(test|spec).(ts|tsx)"
    ],
    "globals": {
      "ts-jest": {
        "babelConfig": true,
        "tsConfig": "jest.tsconfig.json"
      }
    },
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "enzyme.js"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/enzyme.js"
    ],
    "coverageReporters": [
      "json",
      "lcov",
      "text",
      "text-summary"
    ],
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/__mocks__/mocks.js",
      "\\.(css|less)$": "<rootDir>/__mocks__/mocks.js"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/maxfouquet/next.js-typescript-starter.git"
  }
}
